@model DoAnCN.Models.RegisterViewModel
@using BotDetect.Web.Mvc;
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
@{
    MvcCaptcha registerCaptcha = new MvcCaptcha("registerCaptcha");

}


<div class="loginn">
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <h2 class="inactive underlineHover"> Sign In </h2>
            <h2 class="active">Sign Up </h2>

            <!-- Icon -->
            <!-- Login Form -->
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Register</h4>
                <hr />
                @Html.ValidationSummary(false, "")
                <div class="form-group">

                    @Html.TextBoxFor(m => m.Email, new { @type = "text", @id = "login", @class = "fadeIn second input-login", @name = "login", @placeholder = "Login" })
                    @Html.ValidationMessageFor(m => m.Email, "")
                </div>
                <div class="form-group">

                    @Html.PasswordFor(m => m.Password, new { @type = "text", @id = "password", @class = "fadeIn third input-login", @name = "login", @placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "")
                </div>

                <div class="form-group">

                    @Html.PasswordFor(m => m.ConfirmPassword, new { @type = "text", @id = "ConfirmPassword", @class = "fadeIn third input-login", @name = "login", @placeholder = "ConfirmPassword" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "")

                </div>
                <div class="form-group captcha">

                    @Html.Captcha(registerCaptcha)
                    @Html.TextBox("CaptchaCode")
                </div>
                <div class="form-group">
                    <div>
                        <input type="submit" class="fadeIn fourth" value="Register" />
                    </div>
                </div>

            }


        </div>
    </div>
</div>
